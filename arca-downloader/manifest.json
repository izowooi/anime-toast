{
  "manifest_version": 3,
  "name": "Arca Image Downloader",
  "version": "1.0",
  "description": "게시글 ID 폴더에 이미지 자동 다운로드",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://arca.live/*",
    "https://ac-o.namu.la/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://arca.live/b/*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}